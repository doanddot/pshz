extends ../../main.pug

block variables
    - var bodyClass = 'docs'

block breadcrumbs    
    +breadcrumbs('Нормативные документы', {href: 'home.html', name: 'Главная'}, { href: '#', name: 'Сертификаты'})

block main
    -
        var docs = [
            { src: '01', heading: 'Сертификат соответствия 5-10_10-15_10-20', href: '01' },
            { src: '02', heading: 'Декларация о соответствии 5-10_10-15_10-20', href: '02' },
            { src: '03', heading: 'Декларация о соответствии 5-10_10-15_10-20', href: '03' },
            { src: '04', heading: 'Декларация о соответствии 5-20_20-40_40-70', href: '04' },
            { src: '05', heading: 'Свидетельство о поверке весов вагонных', href: '05' },
        ]        
    
    section.certs
        .container
            .row
                each doc in docs
                    .certs__col.col-xs-6.col-md-4.col-lg-3
                        img.certs__thumbnail(src=require('./docs-thumbnail-' + doc.src + '.jpg').default)
                        span.certs__heading= doc.heading
                        a.button.certs__link(download href=require('./docs-' + doc.href + '.jpg').default target="_blank") Скачать
